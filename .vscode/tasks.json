{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "npm",
    "args": ["run"],
    "echoCommand": true,
    "problemMatcher": "$tsc",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test"
            ]
        }
    ]
}